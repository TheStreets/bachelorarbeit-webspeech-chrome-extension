{
  "manifest_version": 3,
  "name": "Bachelor Thesis: WebSpeech API",
  "version": "1.0.0",
  "description": "A Chrome Extension that uses the WebSpeech API, to make certain tasks easier.",
  "action": {
    "default_title": "Bachelor Thesis: WebSpeech API"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"]
  }],
  "permissions": [
    "tabs",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "desktopCapture",
    "search",
    "tts"
  ]
}
